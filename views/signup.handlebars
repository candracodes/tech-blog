<!-- start: row -->
<div align="center" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

  <!-- start: column -->
  <div align="center" class="col-lg-12">
    {{! start: card }}
    <div class="card shadow-sm">
      <div class="card-header">
        <h2>Sign Up</h2>
      </div>
      <div class="card-body">
        <form id="signup-form">
          <!-- USERNAME -->

          <div class="form-floating">
            <input
              type="text"
              class="form-control"
              id="username-input-signup"
              placeholder="Username"
            />
            <label for="username-input-signup">Username</label>
          </div>
          <br />

          <!-- PASSWORD -->
          <div class="form-floating">
            <input
              type="password"
              class="form-control"
              id="password-input-signup"
              placeholder="Password"
            />
            <label for="password-input-signup">Password</label>
          </div>
          <br />

          <!-- SUBMIT BUTTON -->
          <button
            type="submit"
            id="signup-btn"
            class="w-100 btn btn-primary btn-lg"
          >Sign Up</button>
          <br />

          <!-- SIGN UP BUTTON -->
          <a href="/login">Login instead</a>
        </form>
      </div>
    </div>
    {{! end: card }}
  </div>
  <!-- end: column -->

</div>
<!-- end: row -->


<script src="/javascript/signup.js"></script>