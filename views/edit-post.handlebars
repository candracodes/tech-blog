
<div class="post card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-post-form" class="card-body">
    <input type="hidden" id="post-id" value="{{post.id}}" />
    <!-- TITLE -->
    <div class="form-floating">
      <input type="text" class="form-control" id="post-title" value="{{post.title}}" />
      <label for="post-title">Title</label>
    </div>

    <br>

    <!-- CONTENT -->
    <div class="form-floating">
      <textarea type="text" class="form-control" id="post-body" rows="10">{{post.body}}</textarea>
      <label for="post-body">Blog Content</label>
    </div>

    <br>


    <button type="submit" class="w-100 btn btn-primary btn-lg">Update</button>
    <br>
    <br>
    <button type="button" id="delete-btn" class="w-100 btn btn-danger btn-lg">Delete</button>
  </form>
</div>


 