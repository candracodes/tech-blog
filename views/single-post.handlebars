<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
        Posted by
        {{post.User.username}}
        on
        {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>
  <br />
  <br />

  {{#if post.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash;
              {{User.username}},
              {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
    <br />
    <br />
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />
      <!-- ADD COMMENT -->
      <div class="form-floating">
        <textarea
          type="text"
          class="form-control"
          name="comment-body"
          rows="10"
        ></textarea>
        <label for="comment-body">Comment</label>
      </div>

      <br />

      <button type="submit" class="w-50 btn btn-primary btn-lg">Submit</button>
    </div>
  </form>
</div>

<script src="/javascript/comment.js"></script>